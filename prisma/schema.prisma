// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/chat.db"
}

model Chat {
  id        String   @id @default(uuid())
  chatId    String   
  content   String
  role      String   
  metadata  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("chats")
}
